#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int i,j,n;
    scanf("%d",&n);
   
    for(i=1;i<=n-1;i++)
        {
            for(j=n;j>=1;j--)
            {
              if(i>=j)
              {
                printf("* ");
                  }
                else
                {
                    printf(" ");
                }
            }
            printf("\n");
        }
     for(i=n;i>=1;i--)
        {
            for(j=n;j>=1;j--)
            {
              if(i>=j)
              {
                printf("* ");
                  }
                else
                {
                    printf(" ");
                }
            }
            printf("\n");
        }
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
